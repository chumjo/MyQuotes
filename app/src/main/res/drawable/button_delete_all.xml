<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_focused="true" android:state_pressed="false" android:color="?colorAccent"/>
    <item android:state_focused="true" android:state_pressed="true" android:color="@android:color/holo_red_light"/>
    <item android:state_focused="false" android:state_pressed="true" android:color="@android:color/holo_red_light"/>
    <item android:color="?colorAccent"/>
</selector>